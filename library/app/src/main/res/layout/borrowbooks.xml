<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"

    >
    <RelativeLayout

        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_A">
            <Button

                android:layout_width="match_parent"

                android:id="@+id/xzuser"
                android:layout_height="45dp"

                android:text="从用户列表选择借书用户"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_A"
            android:id="@+id/add_B">
            <TextView
                android:layout_width="50sp"
                android:layout_height="40dp"

                android:text="用户名:"/>
            <EditText
                android:id="@+id/borrowBooks_UserId"
                android:hint="借书用户名/学号"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_B"
            android:id="@+id/add_C">
            <TextView
                android:layout_width="50sp"
                android:layout_height="40dp"

                android:text="借书人:"/>
            <EditText

                android:id="@+id/borrowBooks_UserName"
                android:hint="借书人姓名"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_C"
            android:id="@+id/add_D">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="从图书列表选择要借的图书"
                android:id="@+id/xzbook"
                android:layout_below="@id/borrowBooks_UserName"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_D"
            android:id="@+id/add_E">
            <TextView
                android:layout_width="50sp"
                android:layout_height="40dp"

                android:text="书名:"/>
            <EditText
                android:hint="书名"
                android:id="@+id/borrowBooks_bookname"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_E"
            android:id="@+id/add_F">

            <TextView
                android:layout_width="50sp"
                android:layout_height="40dp"

                android:text="ISBN:"/>
            <EditText
                android:hint="ISBN"
                android:id="@+id/borrowBooks_bookISBN"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_F"
            android:id="@+id/add_G">
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/borrowBooks_Button"
                android:text="借书"
                />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>