<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:screenOrientation="portrait"
    android:layout_height="match_parent"
    android:background="@drawable/bj"

    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical|center_horizontal">
    >
<RelativeLayout

    android:layout_width="250dp"
    android:layout_height="match_parent"

    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical|center_horizontal">


    <EditText

        android:background="@drawable/edit"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/user"
          android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:paddingTop="8dp"
        android:paddingLeft="5dp"
        android:hint="手机号/邮箱/用户名"

          android:id="@+id/main_nameEdit"
        />
        <EditText
            android:layout_marginTop="30dp"
            android:layout_below="@id/main_nameEdit"
        android:id="@+id/main_AgeEdit"
            android:background="@drawable/edit"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
          android:inputType="textPassword"
         android:hint="请输入密码"             
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/main_AgeEdit"
        android:gravity="right">
                <CheckBox


                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/mina_check"

                android:text="记住密码"
                android:textSize="7dp"
            />

    </LinearLayout>
          <Button
              android:layout_marginTop="40dp"
              android:layout_below="@id/main_AgeEdit"
            android:id="@+id/mian_login"  
             android:background="@drawable/ann"
           android:layout_width="match_parent"
            android:layout_height="40dp"
         android:text="登陆"
            />
  


          <RelativeLayout
              android:layout_marginTop="10dp"
              android:layout_below="@id/mian_login"
               android:gravity="left"
              android:layout_height="wrap_content"
            android:layout_width="wrap_content"  >
               <TextView
     android:gravity="left"
                   android:textSize="10dp"
     android:id="@+id/zhmm"
           android:layout_width="wrap_content"    
            android:layout_height="wrap_content"
         android:text="忘记密码?"
            />
           </RelativeLayout>
           
          <RelativeLayout
              android:layout_marginTop="10dp"
              android:layout_below="@id/mian_login"
               android:gravity="right"
              android:layout_height="wrap_content"
            android:layout_width="match_parent"  >
        <TextView
            android:textSize="10dp"
           android:layout_width="wrap_content"
           android:id="@+id/mian_registration"
            android:layout_height="wrap_content"
         android:text="注册"     
            />
 </RelativeLayout>

</RelativeLayout>
    </RelativeLayout>
